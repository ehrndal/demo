<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>My app</title>
        <link rel="stylesheet" type="text/css" href="css/style.css">
    </head>
    <body>
        <div class="container">
                <h1><%= title %></h1>

                <ul>
                    <% for(var i = 0; i < items.length; i++) { %>
                        <li><%= items[i].desc %></li>
                    <% } %>
                </ul>
        
                <form action="/add" method="post">
                    <input type="text" name="newItem" placeholder="Description">
                    <input type="submit" value="OK">
                </form>
        </div>
    </body>
</html>
